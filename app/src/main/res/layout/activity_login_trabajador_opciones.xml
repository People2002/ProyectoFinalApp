<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".Login_Supervisor_Opciones">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:background="@color/proyecto_color">
        <TextView
            android:id="@+id/textView2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/logo_empresa" />

        <RelativeLayout
            android:layout_width="300dp"
            android:layout_height="100dp">

            <TextView
                android:id="@+id/lblNombreSupervisor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:text="Bienvenido Cocho!"
                android:textColor="#1283B9"
                android:textSize="32dp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="70dp"
                android:layout_marginLeft="10dp"
                android:textSize="22dp"
                android:textStyle="bold"
                android:textColor="#636A6E"
                android:text="¿Qué deseas hacer?">
            </TextView>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:paddingLeft="10dp">


        <TextView
            android:id="@+id/textView7"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/ic_baseline_account_circle_24" />

        <LinearLayout
            android:layout_width="310dp"
            android:layout_height="100dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/textView8"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Cargo: Trabajador"
                android:textColor="#C1C9D1"
                android:textSize="24dp"/>
            <TextView
                android:id="@+id/textView9"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Cod: N00206969"
                android:textColor="#C1C9D1"
                android:textSize="24dp"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <Button
            android:id="@+id/btnMermaTrabajadorOpcion"
            android:layout_width="410dp"
            android:layout_height="90dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/btnt1"
            android:paddingRight="110dp"
            android:text="Merma"
            android:textColor="@color/black"
            android:textSize="22dp"
            tools:ignore="SpeakableTextPresentCheck"></Button>

        <Button
            android:id="@+id/btnAlmacenTrabajadorOpcion"
            android:layout_width="400dp"
            android:layout_height="80dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/btnt4"
            android:paddingRight="80dp"
            android:text="Almacen"
            android:textColor="@color/black"
            android:textSize="22dp"
            tools:ignore="SpeakableTextPresentCheck">

        </Button>

        <Button
            android:id="@+id/btnSolicitudesTrabajadorOpcion"
            android:layout_width="400dp"
            android:layout_height="80dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/btnt2"
            android:text="Agregar producto"
            android:textColor="@color/black"
            android:textSize="22dp"
            tools:ignore="SpeakableTextPresentCheck">

        </Button>

        <Button
            android:id="@+id/btnRegistrosTrabajadorOpcion"
            android:layout_width="400dp"
            android:layout_height="80dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/btnt3"
            android:paddingRight="70dp"
            android:text="Registros"
            android:textColor="@color/black"
            android:textSize="22dp"
            tools:ignore="SpeakableTextPresentCheck">

        </Button>

    </LinearLayout>

</LinearLayout>