<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".eliminar4">

    <LinearLayout
        android:layout_width="412dp"
        android:layout_height="60dp"
        android:background="#6D7175"
        android:orientation="horizontal">

        <TextView
            android:layout_width="222dp"
            android:layout_height="35dp"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="80dp"
            android:text="Eliminar Producto"
            android:textSize="27dp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="-50dp"
        android:background="@drawable/icon_back">
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="15dp"
        android:orientation="vertical">

        <EditText
            android:layout_width="300dp"
            android:layout_height="42dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:background="@drawable/busqueda_fondo"
            android:text="  Código ó nombre del producto"
            android:textSize="14dp"
            android:textColor="#8492A6"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck"/>

        <LinearLayout
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginLeft="275dp"
            android:layout_marginTop="-35dp"
            android:background="@drawable/lupa_azul_icono">
        </LinearLayout>

        <TextView
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="Lista de inventario"
            android:textSize="14dp"
            android:textColor="#3737AD"/>

        <LinearLayout
            android:layout_width="390dp"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:background="#2016C9"
            android:orientation="horizontal"/>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_productosEli"
        android:layout_width="match_parent"
        android:layout_height="587dp" />

</LinearLayout>