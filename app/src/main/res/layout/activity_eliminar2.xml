<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".eliminar2">

    <LinearLayout
        android:layout_width="412dp"
        android:layout_height="60dp"
        android:background="#6D7175"
        android:orientation="horizontal">

        <TextView
            android:layout_width="222dp"
            android:layout_height="35dp"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="80dp"
            android:text="Eliminar Producto"
            android:textSize="27dp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="-50dp"
        android:layout_marginLeft="15dp"
        android:background="@drawable/icon_back">
    </LinearLayout>

    <TextView
        android:layout_width="305dp"
        android:layout_height="40dp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="50dp"
        android:text="Esfera de carbón de 4''"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="#5A6978"/>

    <ImageView
        android:layout_width="260dp"
        android:layout_height="260dp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="76dp"
        android:src="@drawable/LogoObturacion"/>

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="28dp"
        android:background="#969FAA">

        <TextView
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="15dp"
            android:text="Stock: 80 unidades"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="22sp">
        </TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="28dp"
        android:background="#969FAA">

        <TextView
            android:layout_width="280dp"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="15dp"
            android:text="Código del producto: ESF04"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="22sp">
        </TextView>

    </LinearLayout>

    <Button
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_marginTop="48dp"
        android:layout_marginLeft="108dp"
        android:text="Eliminar"
        android:textSize="24sp"
        android:textColor="@color/white"
        android:background="@drawable/boton_fondo_detalles"
        tools:ignore="TouchTargetSizeCheck"/>

</LinearLayout>