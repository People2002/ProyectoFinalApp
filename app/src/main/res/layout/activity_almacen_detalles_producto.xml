<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CCCCCC"
    android:orientation="vertical"
    tools:context=".Almacen_Detalles_Producto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#6D7175">

        <TextView
            android:id="@+id/det_nombre_prod"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:gravity="center"
            android:paddingLeft="15dp"
            android:text="Nombre de producto"
            android:textColor="@color/white"
            android:textSize="25dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/logo_empresa"/>

        <LinearLayout
            android:layout_width="390dp"
            android:layout_height="350dp"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/fondo_detalles_producto">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="Codigo de producto:"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="50dp"
                    android:textSize="22dp"/>

                <TextView
                    android:id="@+id/det_codigo_prod"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="8dp"
                    android:text="Codigo"
                    android:textColor="#C7C7C7"
                    android:textSize="22dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="Ubicado en:"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="50dp"
                    android:textSize="22dp"/>

                <TextView
                    android:id="@+id/det_pasillo_prod"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="8dp"
                    android:text="Pasillo"
                    android:textColor="#C7C7C7"
                    android:textSize="22dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="-160dp"
                android:layout_marginTop="130dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="Stock:"
                    android:layout_gravity="center"
                    android:textSize="22dp"/>

                <TextView
                    android:id="@+id/det_unidades_prod"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="8dp"
                    android:text="Unidades"
                    android:textColor="#C7C7C7"
                    android:textSize="22dp" />

            </LinearLayout>



        </LinearLayout>


    </LinearLayout>




</LinearLayout>